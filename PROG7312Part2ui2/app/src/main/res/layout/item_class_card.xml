<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:background="@drawable/class_card_container"
    android:clipChildren="true">

    <!-- Class Name with Beige Background -->
    <TextView
        android:id="@+id/className"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Math"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="normal"
        android:padding="12dp"
        android:gravity="center"
        android:background="@drawable/class_name_bg" />

    <!-- Description Section with Black Background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000"
        android:padding="12dp">

        <TextView
            android:id="@+id/classDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="eg.unprogramming\neg.untestname"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</LinearLayout>