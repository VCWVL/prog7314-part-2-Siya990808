<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg"
    android:padding="24dp">

    <!-- Close Button -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Assignment"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="start" />

        <ImageView
            android:id="@+id/closeDialogBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_gravity="end"
            android:contentDescription="Close"
            app:tint="#000000"
            xmlns:app="http://schemas.android.com/apk/res-auto" />
    </FrameLayout>

    <!-- Assignment Name Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/assignmentNameInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edit_text_bg"
        android:paddingHorizontal="16dp"
        android:hint="Enter assignment name"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <!-- Save Button -->
    <FrameLayout
        android:id="@+id/saveAssignmentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/yellow_button"
            android:scaleType="fitXY"
            android:contentDescription="Save Button Background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Save"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />
    </FrameLayout>

</LinearLayout>